{{#yield "title"}} <h1>Página perfil</h1> {{/yield}}

<h1>Información de perfil</h1>

{{#with user}}
    <div>
        <label for="">Nombre:</label>
        <input type="text" value={{name}} readonly disabled />
    </div>
    <div>
        <label for="">Apellido:</label>
        <input type="text" value={{lastname}} readonly disabled />
    </div>
    <div>
        <label for="">Edad:</label>
        <input type="number" value={{age}} readonly disabled />
    </div>
    <div>
        <label for="">Genero:</label>
        <input type="text" value={{genere}} readonly disabled />
    </div>
    {{>userDetails 
        isAdmin=this.isAdmin
        isLogin=this.isLogin
        isLive=this.isLive
        posts=this.posts
        followers=this.followers
    }}
{{/with}}